

  <h1>Create a new dose for <%= @cocktail.name %></h1>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.association :ingredient %>
  <%= f.input :description, label: 'What is the dose?' %>
  <%= f.submit "Add a dose", class: "btn btn-primary"%>
  <% end %>


  <% @cocktail.doses.each do |dose| %>
  <ul class="list-group">
   <li class="list-group-item"><%= dose.ingredient.name %> <%= dose.description %>


    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash destroy_dose"></i> </li>
    <% end %>
  </ul>

  <% end %>

</div>



