

<div class="container">


  <ul class="list-group">
    <li class="list-group-item"><%= @cocktail.name %></li>

    <% @doses.each do |dose| %>
    <li class="list-group-item">
      <%= dose.ingredient.name %>
      <%= dose.description %></li>
    <% end %>

     </ul>

<h1>Create a new dose for <%= @cocktail.name %></h1>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description, label: 'What is the dose?' %>
    <%= f.submit "Add a dose", class: "btn btn-primary"%>
  <% end %>

</div>

