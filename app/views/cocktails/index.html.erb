  <div class="home-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path 'bar_dumb.jpg' %>')">
    <h1>HARRY POTTER'S</h1>
    <p>Magical Cocktails</p>

    <%= link_to "Add a new cocktail", new_cocktail_path, class: 'center-block add-cocktail-btn' %>
