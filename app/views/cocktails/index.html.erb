 <br>
  <div class="card-container container">




      <% @cocktails.each do |cocktail| %>
      <div class="card-item">
        <div class="card-img">
          <%= cl_image_tag cocktail.photo, height: 300, width: 400, crop: :fill %>
        </div>
        <div class="card-body">
          <h4 class="card-title">
            <a href="#"><%= link_to cocktail.name, cocktail_path(cocktail) %></a>
          </h4>
        </div>
      </div>
      <% end %>
  </div>

